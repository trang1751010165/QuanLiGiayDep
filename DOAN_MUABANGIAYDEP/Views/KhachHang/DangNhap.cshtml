@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DangNhap</title>
     <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="container">
            
       <div class="form bg-light mt-5">
     <form action="@Url.Action("DangNhap")" method="post">
                   <div class="lead">
                        <br />
                        <br />
                       <div class ="font-weight-bold text-danger text-center ">
                         &nbsp&nbsp&nbsp ĐĂNG NHẬP TÀI KHOẢN<span class="sr-only">(current)</span>
                       </div>
                          </div>
    <br />
  
                <div class="form-group col-md-6" style="margin-left:300px">
                          <input class="form-control text-center" type="text" placeholder="Tên tài khoản" name="txtTenTK"  />
                  <br />
                          <input class="form-control text-center" type="password" placeholder="Mật khẩu" name="txtMatKhau" />
                </div>
                 <div class="form-group text-center text-danger">
                      @if (ViewBag.tb != null)
                         {
                              @ViewBag.tb;
                         }
                    </div>
                  <div class="form-group text-center ">
                      <a href="@Url.Action("DangKy","KhachHang")">Bạn chưa có tài khoản?</a> &nbsp&nbsp&nbsp
                         <button name="btnDangNhap" type="submit" class="btn btn-danger">ĐĂNG NHẬP</button>
                      
                    </div>
                  <br />
         
        
            </form>
          </div> 
            </div>
    </div>
     <script src="~/Content/jquery-3.3.1.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
