@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using DOAN_MUABANGIAYDEP.Models;
@model List<SanPham>

<div><marquee direction="left"  scrollamount="5" style ="color:red;font-weight:bold">Chào mừng @Session["dn"] đã đến với trang mua sắm của shop GiayDepXinh. ❤ ♡ ღ Hãy nhanh tay chọn cho riêng mình những sản phẩm tốt-đẹp-chất lượng và sẽ có cơ hội nhận những phần quà siêu hấp dẫn tại shop!!ツ✺</marquee></div>
 <div id="carouselExampleIndicators" class="carousel slide mt-1" data-ride="carousel" >
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Content/HinhAnh/banner1.jpg" alt="First slide" />
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/HinhAnh/banner2.jpg" alt="Second slide"/>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/HinhAnh/banner3.jpg" alt="Third slide"/>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
<div class="khung">
    @foreach(var sp in Model)
    {
        <div class= "item">
            <div class="hinh">
            <img src="~/Content/Image/@sp.HinhAnh" width="250" height="260"  />
                </div>
            <p class="item-label">
                @sp.TenSP 
                <br />
                Size:@sp.Size
                <br />
                 Giá:  @sp.Gia <ins class="text-danger">Đồng</ins>
            </p><br />
           <div class="form-row">
               <div class="form-group col-md-6 text-center">
            
                <a href="@Url.Action("ChiTiet1SP","Home",new {msp = @sp.MaSP })" class="btn btn-danger">Chi tiết</a>
            
                   </div>
               <div class="form-group col-md-auto">
            <a href="@Url.Action("ThemGioHang","GioHang", new { msp = @sp.MaSP, @strUrl=Request.Url.ToString() })" class="btn btn-danger">Đặt mua</a>
                   </div>
                </div>
        </div>
    }
</div>


    </div>

