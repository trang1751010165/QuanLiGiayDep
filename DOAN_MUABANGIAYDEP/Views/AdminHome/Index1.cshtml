@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@using DOAN_MUABANGIAYDEP.Models;
@model List<SanPham>
<div class="form-row">
    <div class="form-group col-md-6 text-center">
    <h4>Chào ADMIN!</h4> 
        </div>
    <div class="form-group col-md-6 text-right">
    <a href="@Url.Action("DangNhap","KhachHang")" class="btn btn-outline-success">ĐĂNG XUẤT</a>
        </div>
<br />
    </div>
&nbsp&nbsp&nbsp<a href="@Url.Action("Nhap","AdminHome")" class="btn btn-danger">Thêm sản phẩm mới</a>
<table class="table table-striped">
    <tr class="table-active">
        <td class="text-center">Mã sản phẩm</td>
        <td class="text-center">Tên sản phẩm</td>
        <td class="text-center">Hình ảnh</td>
        <td class="text-center">Mô tả</td>
        <td class="text-center">Số lượng tồn</td>
        <td class="text-center">Đơn giá</td>
        <td class="text-center">Ngày cập nhật</td>
        <td class="text-center">Kích thước</td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var i in Model)
    {
    <tr >
        <td class="text-center">@i.MaSP</td>
        <td class="text-center">@i.TenSP</td>
        <td class="text-center"> <img src="~/Content/Image/@i.HinhAnh" width="250" height="260"  /></td>
        <td class="text-center">@i.MoTa</td>
        <td class="text-center">@i.SoLuongTon</td>
        <td class="text-center">@i.Gia</td>
        <td class="text-center">@i.NgayCapNhat</td>
        <td class="text-center">@i.Size</td>
        <td class="text-center"><a href="@Url.Action("Sua","AdminHome",new { ma=@i.MaSP, ten=@i.TenSP, gia=@i.Gia, mota=@i.MoTa, hinh=@i.HinhAnh,  ngaycn=@i.NgayCapNhat,  slt=@i.SoLuongTon,  manhom=@i.SoLuongTon, size=@i.Size })">Sửa</a></td>
        <td class="text-center"><a href="@Url.Action("XLXoa","AdminHome",new {ma=@i.MaSP})">Xóa</a></td>
    </tr>
       
    }
    
</table>